<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.bin.model.mappers.app.ApBehaviorEntryMapper" >
    <resultMap id="BaseResultMap" type="com.bin.model.behavior.pojos.ApBehaviorEntry" >
        <id column="id" property="id" />
        <result column="type" property="type"/>
        <result column="entry_id" property="entryId" />
        <result column="created_time" property="createdTime" />
        <result column="burst" property="burst"/>
    </resultMap>
    <sql id="Base_Column_List" >
    id, type, entry_id, created_time
  </sql>
    <select id="selectByUserIdOrEquipment" resultMap="BaseResultMap">
        select
        <include refid="Base_Column_List"/>
         from ap_behavior_entry
         <where>
             <if test="userId != null">
                entry_id = #{userId} and type = 1
             </if>
             <if test="userId == null and equipmentId != null">
                 entry_id = #{equipmentId} and type = 0
             </if>
         </where>
         limit 1
    </select>

</mapper>